@model DiaryEntity

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Edit a Diary Entity</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="form-group mb-3 fs-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" row="5" class="form-control" placeholder="Enter a title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3 fs-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <input asp-for="Description" row="5" class="form-control" placeholder="Enter a description" />
                            <span asp-validation-for="Description" class="text-danger"></span>

                        </div>
                        <div class="form-group mb-3 fs-3">
                            <label asp-for="CreatedAt" class="form-label">Created at</label>
                            <input asp-for="CreatedAt" row="5" class="form-control" type="date" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>

                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Edit</button>
                            <a asp-controler="Diary" asp-action="Index" class="btn btn-primary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}